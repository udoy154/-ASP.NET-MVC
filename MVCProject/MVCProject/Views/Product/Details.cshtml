@model MVCProject.ViewModel.ProductEditViewModel
@{
    ViewBag.Title = Model.Name + " Details";
}
<style>
    .thambnail-img{
        height: 200px;
        width: 200px;
    }
</style>
<div class="container">
    <div class="card mt-2">
        <div class="card-header">
            <h1 class="card-title">@Model.Name Product Details</h1>
        </div>
        <div class="card-body">
            <div class="row align-content-center">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @if (Model.StImagePath != null)
                            {
                                foreach (var path in Model.StImagePath)
                                {
                                    <img src="~/ProductPhoto/@path" asp-append-version="true" class="thambnail-img" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <dl class="row">
                <dt class="col-sm-2 card-title">
                    @Html.DisplayNameFor(model => model.ID)
                </dt>
                <dd class="col-sm-10 card-text">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Details)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Details)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsFavorite)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsFavorite)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StockQuantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StockQuantity)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            @Html.ActionLink("Edit", "Edit", "Product", new { id = Model.ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back", "Index", "Product", null, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", "Product", new { id = Model.ID }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
<br />
<br />
<br />


