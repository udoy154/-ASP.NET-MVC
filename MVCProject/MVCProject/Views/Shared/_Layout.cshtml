<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="background-image:linear-gradient(to left, #0c5b08, #04337d);">
        <div class="container">
            <strong style="color:white;"><i class="fa fa-home " aria-hidden="true"></i> @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand", @style = "color:White;" })</strong>
            <ul class="navbar-nav ml-0">
                <li class="nav-item">
                    @Html.ActionLink("Report", "Index", "Report", null, new { @class = "nav-link", @style = "color:White;" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link", @style = "color:White;" })
                </li>
            </ul>
        </div>
</nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
