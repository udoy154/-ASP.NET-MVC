@model  MVCProject.Models.ProductMG
@{
    ViewBag.Title = "Edit Image";
}
<div class="container">
    @using (Html.BeginForm())
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 style="text-align:center">Edit Product Images</h1>
                <hr />
                @Html.TextBoxFor(x => x.ProductID, new { @hidden = "hidden" })
                <div class="form-group">
                    <div class="row">
                        @Html.LabelFor(x => x.ImgPath, new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.ImgPath, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ImgPath, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        @Html.LabelFor(x => x.ThumbnailPath, new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.ThumbnailPath, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ThumbnailPath, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        @Html.LabelFor(x => x.DisplayOrder, new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DisplayOrder, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row offset-2">
                        <div class="form-check">
                            @Html.CheckBoxFor(x => x.IsDefaultImg, new { @class = "form-check-input" })
                            @Html.LabelFor(x => x.IsDefaultImg, new { @class = "form-check-label" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row offset-2">
                        <input type="submit" class="btn btn-primary" value="Update" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>



