@model TicketPurchasingSystem.Models.PersonsModel
@{
    ViewBag.Title = "Index";
}
<style>
    #navbarUiLiA ul li:nth-child(2) {
        background: #2E3B5F;
    }

        #navbarUiLiA ul li:nth-child(2) a {
            color: white;
        }

    h2 {
        text-align: center;
    }
    .PersonID {
        background: #232C47;
        border-color: #204c73;
        color: white;
    }
    .label-for-input{
        background-image: linear-gradient(to right, #232C47, #303E63);
        padding: 7px;
        padding-left: 10px;
        width: 200px;
    }
    .lol{
        text-align: left;
    }
    .btn-search{
        background: #303E64;
        color: white;
        border-radius: 30px;
        width: 150px;
        border: 1px solid #48801F;
    }
    .btn-search:hover{
        background: #2c385a;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Search Users Details By ID</h2>
        <hr />
        <div class="form-group">
            <div class="">
                @Html.LabelFor(model => model.PersonID, htmlAttributes: new { @class = "col-md-offset-2 col-md-2 label-for-input" })
            </div>
            <div class="col-md-7">
                @Html.EditorFor(model => model.PersonID, new { htmlAttributes = new { @class = "form-control PersonID" } })
                @Html.ValidationMessageFor(model => model.PersonID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">
                <input type="submit" value="Search" class="btn btn-primary btn-search" />
            </div>
        </div>
    </div>
}
