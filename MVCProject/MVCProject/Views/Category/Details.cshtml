@model MVCProject.ViewModel.CategoryDetailsViewModel
@{
    ViewBag.Title = Model.Name + " Details";
}
<div class="container">
    <div class="card mb-1 mt-2">
        <div class="card-header">
            <h1 class="card-title">@Model.Name Categories Details</h1>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ParentCatID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ParentCatID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DisplayOrder)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            @Html.ActionLink("Back", "Index", "Category", null, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", "Category", new { id = Model.ID }, new { @class = "btn btn-danger" })
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Product List of This Category</h3>
        </div>
        <div class="card-body">
            @if (Model.Products.Any())
            {
                foreach (var product in Model.Products)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <table>
                                <tr>
                                    <td><b>Product ID: </b></td>
                                    <td><p class="card-text">@product.ID</p></td>
                                </tr>
                                <tr>
                                    <td><b>Product Name: </b></td>
                                    <td><p class="card-text">@product.Name</p></td>
                                </tr>
                            </table>

                            @Html.ActionLink("Details", "Details", "Product", new { id = product.ID }, new { @class = "btn btn-primary mr-1" })
                            @Html.ActionLink("Delete", "Delete", "Product", new { id = product.ID }, new { @class = "btn btn-danger" })
                        </div>
                        <div class="col-md-6">
                            @*<img src="@product.ProImage"/>*@
                        </div>
                    </div>
                }
            }
            else
            {
                <h4 class="card-text">No product added on this category</h4>
            }
        </div>
        <div class="card-footer">
            @Html.ActionLink("Back", "Index", "Category", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>


